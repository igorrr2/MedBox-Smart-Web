@{
    ViewData["Title"] = "Editar Usuário";

    Layout = "_LayoutAdmin"; // Use o layout de administrador
}

<div class="text-center">
    
    <h1 class="display-4">Editar Usuário</h1>
    <h3>@ViewData["NomeUsuarioEdicao"]</h3>
</div>
<form asp-controller="Usuarios" asp-action="Salvar" method="post">
    <div class="form-group">
        <label for="usuarioAdministrador">Usuário Administrador</label>
        <input class="form-check-input" type="checkbox" id="usuarioAdministrador" name="usuarioAdministrador" @(ViewData["UsuarioAdministradorEdicao"].ToString() == "True" ? "checked" : "")/>
    </div>
    <div class="form-group">
        <label for="chaveesp32">Chave Esp 32</label>
        <input type="text" class="form-control" id="chaveesp32" name="chaveesp32" placeholder="Chave Esp 32" value="@ViewData["ChaveEsp32Edicao"]">
    </div>

    <button type="submit" class="btn btn-primary btn-block">Salvar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Usuarios" asp-action="Index" role="button">Voltar</a>
</form>