@model List<UsuarioModel>
@{
    ViewData["Title"] = "Usuários";

    Layout = "_LayoutAdmin"; // Use o layout de administrador

}

<div class="text-center">
    <h1 class="display-4">Listagem de Usuários</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Username</th>
                <th scope="col">Usuário administrador</th>
                <th scope="col">Chave esp32</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @{
                int contador = 1;
            }
            @foreach (var usuario in Model)
            {
                <tr>
                    <th scope="row">@contador</th>
                    <td>@usuario.NomeCompleto</td>
                    <td>@usuario.Username</td>
                    <td>
                        <input class="form-check-input" type="checkbox" id="customCheckbox" disabled @(usuario.IsAdministrador ? "checked" : "") />
                    </td>
                    <td>@usuario.ChaveEsp32</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a role="button" class="btn btn-primary" asp-controller="Usuarios" asp-action="Editar" asp-route-id="@usuario.Id">Editar</a>
                        </div>
                    </td>
                </tr>
                contador++;
            }
        </tbody>
    </table>
</div>